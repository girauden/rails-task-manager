<h1>Tasks index</h1>

  <%= link_to "add task", new_task_path() %>
<ul>
    <% @tasks.each do |task| %>
    <li>
      <%= link_to "#{task.name}", task_path(task) %>
      <%= task.description %>
      <%= link_to "edit", edit_task_path(task) %>
      <%= link_to "delete", task_path(task), method: :delete,
        data: { confirm: "Are you sure?" } %>
      <% end %>
    </li>
</ul>
